<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/public/css/main.css">
</head>
<body>
    <h1>{{user.userName}}'s Profile</h1>
    <p>Email: {{user.email}}</p>

    <h2>Watchlist</h2>
    <div id="watchlist" class="watchlist-display"></div>
    {{#if watchlist.length}}
    {{#each watchlist}}
    {{!-- <div class="watchlist-movies"> --}}
        <div class="media-item">
          <img src="https://image.tmdb.org/t/p/w200{{posterPath}}" alt="{{title}} Poster">
          <p>{{title}}</p>
            <button class="watched-button" data-id="{{id}}"data-type="{{type}}">Watched</button>
        </div>
        {{/each}}
    {{else}}
    <p>No media in the watchlist.</p>
  {{/if}}
</div>

  <h2>Watched List</h2>
<div id="watched-list" class="watched-display">
  {{#if watched.length}}
    {{#each watched}}
      <div class="media-item">
        <img src="https://image.tmdb.org/t/p/w200{{posterPath}}" alt="{{title}} Poster">
        <p>{{title}}</p>
      </div>
    {{/each}}
  {{else}}
    <p>No media in the watched list.</p>
  {{/if}}
</div>
  <a href="/">Back to Home</a>
  <input type="hidden" id="userId" value="{{user._id}}">


