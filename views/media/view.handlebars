            {{else}}
            <p><h3> Synopsis:</h3> Information not available</p>
            {{/if}}            
          
            <h3>Genres: </h3> 
            <div class = "display">        
            {{#each media.genres}}          
                | {{this.name}} |               
            {{/each}}
            </div>

            
            {{#if media.director.name}}
            <div class = "director"> DIRECTOR: {{media.director.name}}</div>
            {{else}}
            <div class = "director"> DIRECTOR: Information not available </div>
            {{/if}}
            <div class ="display"> Episodes: {{media.number_of_episodes}} </div>
            
        
            {{/if}}
        </div>
