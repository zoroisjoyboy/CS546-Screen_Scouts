
<div  class="title"> Welcome to Screen Scouts!</div>
<div  class="title-note"> Use the search bar below to find movies and TV shows.</div>


<form id="search-form" method="post" action="/media/search">
  <label for="media_id">Media Search</label>
  <input type="text" id="media_id" name="media_id" required/>
   <button id="submit_button" name="submit_button" type="submit">Submit</button>
</form>
{{#if error}}<p>{{error}}</p>{{/if}}


<div class = "title-search">

    <form action="/media/allmovies" method="GET" style="display:contents">      
        <button id="submit_button" name="submit_button" type="submit"> All Movies </button>
    </form>

    <form action="/media/allshows" method="GET" style="display:contents">      
        <button id="submit_button" name="submit_button" type="submit"> All Shows </button>
    </form>

      <form action="/media/newMovie" method="GET" style="display:contents">      
        <button id="submit_button" name="submit_button" type="submit"> Add Movie </button>
    </form>

      <form action="/media/newShow" method="GET" style="display:contents">      
        <button id="submit_button" name="submit_button" type="submit"> Add Show </button>
    </form>

</div>
  